#!/usr/bin/env bash
#This is advanced process

PID_FILE="/var/run/myscript.pid"

# Create PID file
echo $$ > "$PID_FILE"

# Define signal handlers
sigterm_handler() {
    echo "I hate the kill command"
    cleanup_and_exit
}

sigint_handler() {
    echo "Y U no love me?!"
}

sigquit_handler() {
    cleanup_and_exit
}

cleanup_and_exit() {
    rm -f "$PID_FILE"
    exit 0
}

# Trap signals
trap sigterm_handler SIGTERM
trap sigint_handler SIGINT
trap sigquit_handler SIGQUIT

# Main loop
while true; do
    echo "To infinity and beyond"
    sleep 1
done
