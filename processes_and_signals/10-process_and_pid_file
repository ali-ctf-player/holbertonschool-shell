#!/usr/bin/env bash
#This is advanced process

PID_FILE="/var/run/myscript.pid"

# Always try to create the file, even if we don't have permissions
echo $$ > "$PID_FILE" 2>/dev/null || true

# Set up signal handlers
cleanup() {
    rm -f "$PID_FILE" 2>/dev/null || true
    exit 0
}

trap 'echo "I hate the kill command" >&2; cleanup' SIGTERM
trap 'echo "Y U no love me?!" >&2' SIGINT
trap cleanup SIGQUIT

# Main loop
while true; do
    echo "To infinity and beyond"
    sleep 1
done
