#!/usr/bin/env bash
# This script writes its PID to /var/run/myscript.pid, handles signals, and prints messages indefinitely.

PID_FILE="/var/run/myscript.pid"

# Try to create PID file (with fallback if /var/run not writable)
if ! echo "$$" > "$PID_FILE" 2>/dev/null; then
    PID_FILE="/tmp/myscript.pid"
    echo "$$" > "$PID_FILE"
fi

cleanup_and_exit() {
    rm -f "$PID_FILE"
    exit 0
}

sigterm_handler() {
    echo "I hate the kill command"
    cleanup_and_exit
}

sigint_handler() {
    echo "Y U no love me?!"
}

sigquit_handler() {
    cleanup_and_exit
}

trap sigterm_handler SIGTERM
trap sigint_handler SIGINT
trap sigquit_handler SIGQUIT

while true; do
    echo "To infinity and beyond"
    sleep 1
done
