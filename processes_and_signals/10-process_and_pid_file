#!/usr/bin/env bash
# This script writes its PID to /var/run/myscript.pid, handles signals, and prints messages indefini

PID_FILE="/var/run/myscript.pid"

# Ensure we can write to /var/run
if ! touch "$PID_FILE" 2>/dev/null; then
    echo "Error: Cannot write to $PID_FILE. Run as root."
    exit 1
fi

echo $$ > "$PID_FILE"

# Signal handlers
handle_sigterm() {
    echo "I hate the kill command"
    cleanup_and_exit
}

handle_sigint() {
    echo "Y U no love me?!"
}

handle_sigquit() {
    cleanup_and_exit
}

cleanup_and_exit() {
    rm -f "$PID_FILE"
    exit 0
}

# Trap signals
trap handle_sigterm SIGTERM
trap handle_sigint SIGINT
trap handle_sigquit SIGQUIT

# Main loop
while true; do
    echo "To infinity and beyond"
    sleep 1
done
