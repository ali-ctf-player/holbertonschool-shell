#!/usr/bin/env bash
# This script writes its PID to /var/run/myscript.pid, handles signals, and prints messages indefini

SCRIPT_PATH="/home/student_jail/10-process_and_pid_file"
PID_FILE="/var/run/myscript.pid"

# Start the script as student_jail
su - student_jail -c "$SCRIPT_PATH" &

# Save the PID of the background process
echo $! > "$PID_FILE"

# Signal handlers
handle_sigterm() {
    echo "I hate the kill command"
    cleanup_and_exit
}

handle_sigint() {
    echo "Y U no love me?!"
}

handle_sigquit() {
    cleanup_and_exit
}

cleanup_and_exit() {
    sudo rm -f "$PID_FILE"
    exit 0
}

# Trap signals
trap handle_sigterm SIGTERM
trap handle_sigint SIGINT
trap handle_sigquit SIGQUIT

# Main loop
while true; do
    echo "To infinity and beyond"
    sleep 1
done
